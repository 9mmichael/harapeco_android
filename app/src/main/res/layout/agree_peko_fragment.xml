<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >
  <data>
    <variable
        name="timelineItem"
        type="com.qmmichael.harapeco_android.model.TimelineItem"
        />
  </data>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >
    <RelativeLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        >
      <ImageView
          android:id="@+id/header_image_view"
          android:layout_width="64dp"
          android:layout_height="64dp"
          tools:src="@mipmap/ic_launcher_round"
          />
      <TextView
          android:id="@+id/header_user_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_toEndOf="@+id/header_image_view"
          android:layout_marginTop="8dp"
          android:layout_marginStart="16dp"
          android:text="@{timelineItem.userName}"
          android:textColor="@color/black"
          android:textStyle="bold"
          tools:text="おおおおお"
          />
      <TextView
          android:id="@+id/header_post_time"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/header_user_name"
          android:layout_toEndOf="@id/header_image_view"
          android:layout_marginTop="8dp"
          android:layout_marginStart="16dp"
          android:text="@{timelineItem.postTime}"
          tools:text="〇〇分前"
          />
    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/header_container"
        android:background="@color/light_gray"
        />
    <TextView
        android:id="@+id/join_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        android:text="参加者"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/join_title_text_view"
        />
  </RelativeLayout>
</layout>
