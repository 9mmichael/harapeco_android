<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >
  <data/>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      >
    <RelativeLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        >
      <ImageView
          android:id="@+id/header_image_view"
          android:layout_width="84dp"
          android:layout_height="84dp"
          tools:src="@mipmap/ic_launcher_round"
          />
      <TextView
          android:id="@+id/header_user_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_toEndOf="@+id/header_image_view"
          android:layout_marginTop="4dp"
          android:layout_marginStart="8dp"
          android:textColor="@color/black"
          android:textStyle="bold"
          tools:text="自分のユーザー名"
          />
      <TextView
          android:id="@+id/header_edit_text_view"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_toEndOf="@+id/header_image_view"
          android:layout_alignBottom="@+id/header_image_view"
          android:layout_marginBottom="4dp"
          android:layout_marginStart="8dp"
          android:padding="8dp"
          android:background="@drawable/shape_background_white_stroke_black_rounded"
          android:text="編集する"
          android:textColor="@color/black"
          android:textSize="12sp"
          />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray"
        />
    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
  </LinearLayout>
</layout>

