<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >
  <data>
    <variable
        name="timelineItem"
        type="com.qmmichael.harapeco_android.model.TimelineItem"
        />
  </data>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        >
      <ImageView
          android:id="@+id/item_image_view"
          android:layout_width="72dp"
          android:layout_height="72dp"
          tools:src="@mipmap/ic_launcher"
          />
      <RelativeLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="8dp"
          android:layout_toEndOf="@+id/item_image_view"
          >
        <TextView
            android:id="@+id/item_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{timelineItem.userName}"
            android:textColor="@color/black"
            android:textStyle="bold"
            tools:text="ユーザー名"
            />
        <TextView
            android:id="@+id/item_post_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_user_name"
            android:layout_marginTop="8dp"
            android:text="@{timelineItem.postTime}"
            android:textColor="@color/black"
            android:textSize="12sp"
            tools:text="〇〇分前"
            />
      </RelativeLayout>
      <Button
          android:id="@+id/item_agree_button"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentEnd="true"
          android:layout_centerVertical="true"
          android:background="@drawable/shape_background_yellow_rounded"
          android:text="同意！"
          android:textColor="@color/black"
          />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray"
        />
  </LinearLayout>
</layout>
